# Server Configuration
PORT=3001
NODE_ENV=development

# Discord Webhook URLs (role-based channels)
DISCORD_WEBHOOK_ADMIN=https://discord.com/api/webhooks/your-admin-webhook-url
DISCORD_WEBHOOK_DEVELOPER=https://discord.com/api/webhooks/your-developer-webhook-url
DISCORD_WEBHOOK_STAKEHOLDER=https://discord.com/api/webhooks/your-stakeholder-webhook-url

# Webhook Security
WEBHOOK_TOKEN=your-secure-random-token-here

# Feature Flags
DISCORD_ENABLED=true
SEND_PIPELINE_SUCCESS=false
SEND_PIPELINE_FAILURE=true
